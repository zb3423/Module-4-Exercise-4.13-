import java.util.Scanner;

public class VowelConsonantChecker {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter a letter: ");
        String input = scanner.nextLine().trim();  // Read input and trim whitespace

        // Check if the input is a single letter
        if (input.length() == 1) {
            char letter = input.charAt(0);  // Get the character from input

            // Check if the character is a letter
            if (Character.isLetter(letter)) {
                // Convert to lowercase for consistent comparison
                char lowerCaseLetter = Character.toLowerCase(letter);

                // Check if the letter is a vowel
                if (lowerCaseLetter == 'a' || lowerCaseLetter == 'e' || 
                    lowerCaseLetter == 'i' || lowerCaseLetter == 'o' || 
                    lowerCaseLetter == 'u') {
                    System.out.println(letter + " is a vowel");
                } else {
                    System.out.println(letter + " is a consonant");
                }
            } else {
                System.out.println(input + " is an invalid input");
            }
        } else {
            System.out.println(input + " is an invalid input");
        }

        scanner.close();  // Close the scanner
    }
}
